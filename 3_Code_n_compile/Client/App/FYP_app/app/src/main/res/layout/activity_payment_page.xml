<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fyp_app.PaymentPageActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/PaymentByQRcodeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:onClick="PaymentByScanButton"
            android:text="Scan to Pay" />

        <Button
            android:id="@+id/MyQRcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:onClick="PaymentByMyQRCodeButton"
            android:text="My QR code" />

        <Button
            android:id="@+id/PaymentByAccountButton"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_weight="0.09"
            android:onClick="PaymentByAccountButton"
            android:text="Transfer to Account" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
