<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fyp_app.HomePageActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <GridLayout
        android:layout_width="380dp"
        android:layout_height="500dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/Payment_Button"
            android:layout_width="250dp"
            android:layout_height="400dp"
            android:onClick="PaymentButton"
            android:text="PAYMENT"
            tools:layout_editor_absoluteX="-44dp"
            tools:layout_editor_absoluteY="-102dp" />

        <Button
            android:id="@+id/Gathering_Button"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:onClick="GatheringButton"
            android:text="GATHERING"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="8dp" />

        <Button
            android:id="@+id/Setting_Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="SettingButton"
            android:text="SETTING"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="403dp" />

        <Button
            android:id="@+id/Profile_Button"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="ProfileButton"
            android:text="PROFILE"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="403dp" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
